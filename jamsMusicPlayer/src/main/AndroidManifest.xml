<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.jassmp"
          android:hardwareAccelerated="true"
          android:versionCode="47"
          android:versionName="3.0">

    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.USE_CREDENTIALS"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="20"/>

    <application
        android:name="com.jassmp.Utils.Common"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"

        android:largeHeap="true">

        <!-- Now Playing Activity -->

        <activity
            android:name=".NowPlayingActivity.NowPlayingActivity"
            android:exported="true"
            android:label="@string/now_playing"
            android:launchMode="singleTask">
        </activity>

        <!-- Launcher Activity -->

        <activity android:name=".LauncherActivity.LauncherActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Welcome Activity -->

        <activity
            android:name=".WelcomeActivity.WelcomeActivity"
            android:label="@string/app_name">
        </activity>

        <!-- Main Activity -->

        <activity
            android:name=".MainActivity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        </activity>

        <!-- Services -->

        <service android:name=".Services.AudioPlaybackService"/>
        <service android:name=".Services.AutoFetchAlbumArtService"/>
        <service
            android:name=".Services.LargeWidgetAdapterService"
            android:exported="false"
            android:permission="android.permission.BIND_REMOTEVIEWS"/>
        <service
            android:name=".Services.BuildMusicLibraryService"
            android:exported="false"/>
        <service
            android:name=".Services.DashClockExtensionService"
            android:icon="@drawable/dashclock_icon"
            android:label="@string/app_full_name"
            android:permission="com.google.android.apps.dashclock.permission.READ_EXTENSION_DATA">
            <intent-filter>
                <action android:name="com.google.android.apps.dashclock.Extension"/>
            </intent-filter>

            <meta-data
                android:name="protocolVersion"
                android:value="2"/>
            <meta-data
                android:name="worldReadable"
                android:value="true"/>
            <meta-data
                android:name="description"
                android:value="@string/dashclock_description"/>
        </service>

        <!-- Large Widget -->

        <receiver
            android:name=".WidgetProviders.LargeWidgetProvider"
            android:label="JASS-MP Large Widget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/large_widget_info"/>
        </receiver>

        <!-- Blurred Widget -->

        <receiver
            android:name=".WidgetProviders.BlurredWidgetProvider"
            android:label="JASS-MP Blurred Album Art Widget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/blurred_widget_info"/>
        </receiver>

        <!-- Album Art Widget -->

        <receiver
            android:name=".WidgetProviders.AlbumArtWidgetProvider"
            android:label="JASS-MP Album Art Widget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/album_art_widget_info"/>
        </receiver>

        <!-- Listens for media playback buttons (headphone buttons, bluetooth buttons, etc.) -->

        <receiver android:name=".BroadcastReceivers.HeadsetButtonsReceiver">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON"/>
            </intent-filter>
        </receiver>

        <!-- Small Widget -->

        <receiver
            android:name=".WidgetProviders.SmallWidgetProvider"
            android:label="JASS-MP Small Widget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/small_widget_info"/>
        </receiver>

        <!-- Large widget configuration activity -->

        <activity android:name=".WidgetProviders.LargeWidgetConfigActivity">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE"/>
            </intent-filter>
        </activity>

        <!-- Small widget configuration activity -->

        <activity android:name=".WidgetProviders.SmallWidgetConfigActivity">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE"/>
            </intent-filter>
        </activity>

        <!-- Widget/Notification Now Playing Activity Broadcast Receiver -->

        <receiver android:name=".BroadcastReceivers.LaunchNowPlayingReceiver">
            <intent-filter>
                <action android:name="com.jassmp.LAUNCH_NOW_PLAYING_ACTION"/>
            </intent-filter>
        </receiver>

        <!-- Widget/Notification Play/Pause Broadcast Receiver -->

        <receiver android:name="com.jassmp.BroadcastReceivers.PlayPauseBroadcastReceiver">
            <intent-filter>
                <action android:name="com.jassmp.PLAY_PAUSE_ACTION"/>
            </intent-filter>
        </receiver>

        <!-- Widget/Notification Previous Broadcast Receiver -->

        <receiver android:name="com.jassmp.BroadcastReceivers.PreviousBroadcastReceiver">
            <intent-filter>
                <action android:name="com.jassmp.PREVIOUS_ACTION"/>
            </intent-filter>
        </receiver>

        <!-- Widget/Notification Next Broadcast Receiver -->

        <receiver android:name="com.jassmp.BroadcastReceivers.NextBroadcastReceiver">
            <intent-filter>
                <action android:name="com.jassmp.NEXT_ACTION"/>
            </intent-filter>
        </receiver>

        <!-- Stop Service Broadcast Receiver -->

        <receiver android:name="com.jassmp.BroadcastReceivers.StopServiceBroadcastReceiver">
            <intent-filter>
                <action android:name="com.jassmp.STOP_SERVICE"/>
            </intent-filter>
        </receiver>

        <!-- Receiver that gets called when the user changes songs from the Large Widget -->

        <receiver android:name="com.jassmp.BroadcastReceivers.ChangeTrackBroadcastReceiver">
            <intent-filter>
                <action android:name="com.jassmp.WIDGET_CHANGE_TRACK"/>
            </intent-filter>
        </receiver>

        <!-- Main Settings Activity -->

        <activity android:name="com.jassmp.SettingsActivity.SettingsActivity">
        </activity>

        <!-- Dummy activity that launches Fragment dialogs from the Main Settings Activity -->

        <activity
            android:name="com.jassmp.SettingsActivity.PreferenceDialogLauncherActivity"
            android:label="@string/app_name"
            android:theme="@style/AppThemeTransparent">
        </activity>

        <!-- Now Playing Queue Activity -->

        <activity
            android:name="com.jassmp.NowPlayingQueueActivity.NowPlayingQueueActivity"
            android:label="@string/now_playing_queue">
        </activity>


        <!-- KitKat Fix Activity -->

        <activity
            android:name="com.jassmp.Services.KitKatFixActivity"
            android:allowTaskReparenting="true"
            android:alwaysRetainTaskState="false"
            android:clearTaskOnLaunch="true"
            android:enabled="true"
            android:excludeFromRecents="true"
            android:finishOnTaskLaunch="true"
            android:noHistory="true"
            android:stateNotNeeded="true"
            android:theme="@android:style/Theme.NoDisplay"/>
    </application>

</manifest>
